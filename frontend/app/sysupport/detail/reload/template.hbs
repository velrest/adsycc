<h2>{{t 'sysupport.reload.select'}}</h2>
<div uk-grid  uk-scrollspy="target: > a; cls:uk-animation-slide-bottom-small; delay: 50">
  {{#each model as |package index|}}
    <a class="uk-width-1-4@m uk-link-reset" onclick={{action send "subscribe" package}}>
      {{#uk-card hover=true as |card|}}
        {{#card.header}}
            {{#card.title}}{{format-duration package.duration}}{{/card.title}}
        {{/card.header}}
        {{#card.body}}
          <dl class="uk-description-list">
            <dt>{{t 'sysupport.reload.price'}}:</dt>
            <dd>{{package.price}}</dd>
          </dl>
        {{/card.body}}
      {{/uk-card}}
    </a>
  {{else}}{{t 'global.empty'}}{{/each}}
</div>